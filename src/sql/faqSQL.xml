<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD Sql Map 2.0//EN' 'http://ibatis.apache.org/dtd/sql-map-2.dtd'>
<sqlMap namespace="faq">
	<typeAlias alias="faq" type="faq.faqVO" />

	<resultMap id="faqRes" class="faq">

		<result property="f_no" column="f_no" />
		<result property="f_subject" column="f_subject" />
		<result property="f_content" column="f_content" />
	</resultMap>

	<sql id="select-all">
		SELECT * FROM FAQBOARD
	</sql>

	<sql id="where-no">
		where f_no=#f_no#
	</sql>

	<select id="selectAll" resultMap="faqRes">
		<include refid="select-all"></include>
		order by f_no desc
	</select>

	<select id="selectOne" resultMap="faqRes" parameterClass="int">
		<include refid="select-all" />
		<include refid="where-no" />
	</select>
	
	<select id="selectLastNo" resultClass="faq" parameterClass="int">
			SELECT max(f_no) as f_no FROM FAQBOARD
	</select>
	
		<select id="faq" resultMap="faqRes" parameterClass="int">
		<include refid="select-all" />
		ORDER BY f_no DESC
	</select>
	
	<select id="selectfaq" resultMap="faqRes" parameterClass="int">
		<include refid="select-all" />
		ORDER BY f_no DESC
	</select>
	

	<!-- 검색 -->
	<select id="selectSearchM" resultMap="faqRes" parameterClass="string">
		<include refid="select-all" />
		WHERE F_ID like #searchKeyword#
		ORDER BY f_no DESC
	</select>

	<select id="selectSearchT" resultMap="faqRes" parameterClass="string">
		<include refid="select-all" />
		WHERE f_subject like #searchKeyword#
		ORDER BY f_no DESC
	</select>

	<select id="selectSearchC" resultMap="faqRes" parameterClass="string">
		<include refid="select-all" />
		WHERE f_content like #searchKeyword#
		ORDER BY f_no DESC
	</select>
	
